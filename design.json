{
    "designSystem": {
      "theme": {
        "mode": "dark",
        "primaryColor": "#F9A826",
        "secondaryColor": "#00B6A1",
        "backgroundColor": "#0C1211",
        "textColor": "#FFFFFF",
        "fontFamily": "Inter, sans-serif",
        "gradientStyle": "linear-gradient(90deg, #F9A826 0%, #FFDE59 100%)"
      },
      "typography": {
        "heading1": {
          "fontSize": "2rem",
          "fontWeight": "700",
          "lineHeight": "1.2",
          "color": "#FFFFFF"
        },
        "heading2": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "lineHeight": "1.3",
          "color": "#FFFFFF"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.6",
          "color": "#D1D5DB"
        },
        "highlight": {
          "fontWeight": "700",
          "color": "#F9A826"
        }
      },
      "components": {
        "heroSection": {
          "layout": "two-columns",
          "imageAlignment": "right",
          "textAlignment": "left",
          "background": "dark gradient with abstract lines",
          "button": {
            "style": "pill",
            "gradient": true,
            "hoverEffect": "brightness(1.1)",
            "icon": "arrow-right"
          }
        },
        "textBlockWithImage": {
          "layout": "centered",
          "imagePosition": "center",
          "background": "#FFFFFF",
          "textColor": "#111827",
          "highlightedText": {
            "fontWeight": "700",
            "color": "#F9A826"
          }
        },
        "testimonialSection": {
          "title": {
            "alignment": "center",
            "fontSize": "1.25rem",
            "fontWeight": "600"
          },
          "cards": {
            "layout": "horizontal-scroll",
            "cardStyle": {
              "borderRadius": "8px",
              "backgroundColor": "#1E1E1E",
              "textAlign": "center",
              "shadow": "md"
            },
            "imageStyle": {
              "borderRadius": "top-rounded",
              "aspectRatio": "1/1"
            },
            "text": {
              "fontSize": "1rem",
              "fontWeight": "500"
            }
          }
        },
        "footerCallToAction": {
          "backgroundColor": "#000000",
          "textColor": "#FFFFFF",
          "fontSize": "1rem",
          "emphasis": {
            "fontWeight": "700",
            "color": "#F9A826"
          }
        }
      },
      "layout": {
        "spacing": {
          "sectionPadding": "4rem 2rem",
          "elementGap": "1.5rem"
        },
        "gridSystem": {
          "columns": 12,
          "gutter": "1.5rem"
        }
      },
      "images": {
        "style": "high-resolution studio photo",
        "lighting": "soft light with halo effect",
        "positioning": "right-aligned or centered"
      },
      "interaction": {
        "hoverEffects": {
          "buttons": "scale + brightness",
          "cards": "elevation on hover"
        },
        "transitions": {
          "duration": "0.3s",
          "easing": "ease-in-out"
        }
      }
    }
  }
  